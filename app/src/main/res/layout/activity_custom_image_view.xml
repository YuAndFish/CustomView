<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jiedai.customview.view.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:customImage="@mipmap/ic_launcher"
        app:customImageText="hello android!"
        app:customImageTextColor="#ff0000"
        app:customImageTextSize="25sp"
        app:imageScaleType="center" />

    <com.jiedai.customview.view.CustomImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:customImage="@mipmap/ic_launcher"
        app:customImageText="hello android!"
        app:customImageTextColor="#ff0000"
        app:customImageTextSize="25sp"
        app:imageScaleType="center" />

    <com.jiedai.customview.view.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:customImage="@mipmap/app_icon_logo"
        app:customImagePadding="5dp"
        app:customImageText="hei"
        app:customImageTextColor="#ff0000"
        app:customImageTextSize="25sp"
        app:imageScaleType="center" />
</LinearLayout>